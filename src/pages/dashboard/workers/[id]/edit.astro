---
import { db } from "@/services/mysql";
import Add from "../add.astro";
import { users } from "db/schema";
import { eq } from "drizzle-orm";

const { id } = Astro.params;

const [user] = await db
    .select()
    .from(users)
    .where(eq(users.id, id ?? ""));
---

<Add defaultValues={user} />
